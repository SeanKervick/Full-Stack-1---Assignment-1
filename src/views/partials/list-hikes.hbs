<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>hike</th>
      <th>description</th>
      <th>difficulty</th>
      <th>length (km)</th>
      <th>elevation</th>
    </tr>
  </thead>
  <tbody>
    {{#each location.hikes}}
      <tr>
        <td>
          {{hike}}
        </td>
        <td>
          {{description}}
        </td>
        <td>
          {{difficulty}}
        </td>
        <td>
          {{length}}
        </td>
        <td>
          {{elevation}}
        </td>
        <td>
          <a href="/location/{{../location._id}}/deletehike/{{_id}}" class="ui icon button">
            <i class="fas fa-trash"></i>
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>